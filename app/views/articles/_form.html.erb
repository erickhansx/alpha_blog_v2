
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 d-flex flex-column">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class:"shadow p-5 mb-5 bg-info rounded", data: {turbo: false}, local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow mt-2bg-white rounded", placeholder:"Title" %>  
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :description, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_area :description, rows:10 ,class: "form-control form-control shadow mt-2 bg-white rounded", placeholder:"Description" %>  
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :category, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.collection_select :category_ids, Category.all, :id, :name, {prompt:"Select a category ( can be empty )"} , {multiple: true, size: 3, class: "form-select"} %>
          </div>
        </div>

        <div class="form-group row justify-content-center text-center mt-4"> 
         <p><%= f.submit class: "btn btn-outline-light btn-lg" %></p>
        </div>
      <%end%>
    </div>
    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class:"text-center text-info" %>
  </div>
</div>
