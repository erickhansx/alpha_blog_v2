
<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 d-flex flex-column">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class:"shadow p-5 mb-5 bg-info rounded", data: {turbo: false}, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow mt-2 bg-white rounded", placeholder:"Enter a username" %>  
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label text-light"  %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control form-control shadow mt-2 bg-white rounded", placeholder:"Enter your email address" %>  
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow mt-2 bg-white rounded", placeholder:"Enter a password" %>  
        </div>
      </div>

      <div class="form-group row justify-content-center text-center mt-4"> 
        <p><%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %></p>
      </div>
    <%end%>
    </div>
    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class:"text-center text-info" %>
  </div>
</div>
